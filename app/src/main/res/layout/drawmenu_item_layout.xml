<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_40dp"
    android:background="@color/nav_back_color">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_40dp"
        android:layout_centerVertical="true"
        android:text="Test Test Test"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/filter_title_color"
        android:id="@+id/filter_name"
        android:layout_marginLeft="@dimen/dimen_20dp"

        android:textSize="@dimen/dimen_18sp"/>
    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:id="@+id/unread_frame"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_circle"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:id="@+id/filter_unread_count"
            android:textSize="@dimen/dimen_15sp"
            android:textColor="@color/color_white"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/filter_divider_color"
        android:layout_alignParentBottom="true"></LinearLayout>
</RelativeLayout>