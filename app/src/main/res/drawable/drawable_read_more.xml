<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <solid android:color="@color/color_gray"/>
            <stroke android:width="1dp" android:color="@color/color_gray"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/read_more_color"/>
            <solid android:color="@color/read_more_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <!--	 <solid android:color="#004000" android:textColor = "@color/color_white"/>-->
            <stroke android:width="1dp" android:color="@color/read_more_color"/>
            <solid android:color="@color/read_more_color"/>

        </shape>
    </item>
</selector>