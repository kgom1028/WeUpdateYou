<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid android:color="@color/color_gray"/>
            <stroke android:width="1dp" android:color="@color/color_gray"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/source_color"/>
            <corners android:radius="3dip" />
            <solid android:color="#004000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <!--	 <solid android:color="#004000" android:textColor = "@color/color_white"/>-->
            <stroke android:width="1dp" android:color="@color/source_color"/>
            <solid android:color="@color/source_color"/>

        </shape>
    </item>
</selector>